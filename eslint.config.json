{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    },
    "extends": "standard",
    "rules": {
        "arrow-parens": 0,
        "generator-star-spacing": 0,
        "quotes": 0,
        "no-trailing-spaces": 0,
        "eol-last": 0,
        "no-unused-vars": 0,
        "no-underscore-dangle": 0,
        "no-alert": 0,
        "no-lone-blocks": 0
    },
    "globals": {
      "jQuery": true,
      "$": true
    }
}